extend ../layout

block content

  div(style='text-align: center;')
    a.btn.btn-primary(href='http://localhost:3300/bicicletas') Home
    br
    h1(style='color: #007bff;') Bicicleta # #{bici.id}
    br
    h2 Datos de la bicicleta
    br
    table.table.table-striped(style='margin: auto; width: 50%;')
      thead
        tr
          th(scope='col') #Id
          th(scope='col') Color
          th(scope='col') Modelo
          th(scope='col') Ubicacion
          th(scope='col') Editar
      tbody
        tr
          td(scope='row')=bici.id
          td=bici.color
          td=bici.modelo
          td=bici.latitud + ", "+ bici.longitud
          td
            a.btn.btn-secondary(href='/bicicletas/'+bici.id+'/update') editar
        td

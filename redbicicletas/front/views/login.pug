extends layout

block content
  div.container-fluid.bg-dark
    div.row.justify-content-center.align-items-center.min-vh-100
      div.col-lg-4.col-md-6.col-sm-8
        div.card.border-0.shadow-lg
          div.card-header.bg-white.text-center
            h3.mb-0 Login
          div.card-body.p-4
            form(method='POST' action='/login')
              div.form-group
                label(for='email') Email
                input.form-control(type='email' id='email' name='email' required)
              div.form-group
                label(for='password') Password
                input.form-control(type='password' id='password' name='password' required)
              button.btn.btn-lg.btn-block.btn-primary(type='submit') Sign In
              hr.mt-4
              a(href='/auth/google', class='btn btn-lg btn-block btn-google')
                i.bi.bi-google me-2
                | Sign in with Google

  script(src="/javascripts/auth.js")